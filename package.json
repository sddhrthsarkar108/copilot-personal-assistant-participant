{
  "name": "sids-assistant",
  "displayName": "Sid's Assistant",
  "description": "Personal AI assistant powered by local Ollama models",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "type": "commonjs",
  "activationEvents": [
    "onChat:chat-tutorial.sids-assistant"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "chat-tutorial.sids-assistant",
        "fullName": "Sid's Assistant",
        "name": "assistant",
        "description": "Your personal AI assistant (powered by Ollama)",
        "isSticky": true,
        "commands": [
          {
            "name": "tutor",
            "description": "Switch to tutor mode for learning concepts"
          },
          {
            "name": "exercise",
            "description": "Provide exercises to practice a concept."
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "sids-assistant.refreshModels",
        "title": "Sid's Assistant: Refresh and Select Ollama Models"
      }
    ],
    "configuration": {
      "title": "Sid's Assistant",
      "properties": {
        "sidsAssistant.selectedModel": {
          "type": "string",
          "default": "llama3.2:3b",
          "description": "The Ollama model to use for Sid's Assistant"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.94.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^9.13.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "dependencies": {
    "ollama": "^0.4.6"
  }
}
